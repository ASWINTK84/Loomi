{
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/vite",
      "config": {
        "project": "client/vite.config.js"
      }
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cross-Origin-Opener-Policy",
          "value": "same-origin-allow-popups"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}